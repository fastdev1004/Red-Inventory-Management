<Window x:Class="Red_software.Views.EditItemView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Red_software.Views"
        xmlns:viewModels="clr-namespace:Red_software.ViewModel"
        mc:Ignorable="d"
        Name="EditItemWindow"
        Title="{Binding TitleText}" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow"  Style="{StaticResource editWindowStyle}">
    <Grid Width="Auto" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ContentControl Name="ConCon1" Grid.Row="0" Content="{Binding}" >
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:EditProductViewModel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Product Id:" TextAlignment="Right" Margin="5"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=Item.Id, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Product name:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="1" Text="{Binding Path=Item.Name, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Product code:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="2" Text="{Binding Path=Item.Code, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="3" Text="Product category:" TextAlignment="Right" Margin="5"/>
                        <ComboBox  Grid.Column="1" Grid.Row="3" Text="{Binding Path=Item.Category, Mode=TwoWay}" ItemsSource="{Binding Path=CategoryList}" Margin="5" IsEditable="True" />

                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Cost price:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="4" Text="{Binding Path=Item.Cost_Price, Mode=TwoWay,StringFormat={}{0:C} }" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="5" Text="Sell price:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="5" Text="{Binding Path=Item.Sell_Price, Mode=TwoWay,StringFormat={}{0:C} }" Margin="5" />

                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels:EditProductCategoryViewModel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>

                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Category Id:" TextAlignment="Right" Margin="5"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=Item.Id, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Category name:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="1" Text="{Binding Path=Item.Category, Mode=TwoWay}" Margin="5" />

                        <!--<TextBlock Grid.Column="0" Grid.Row="2" Text="Subcategory name:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="2" Text="{Binding Path=Item.SubCategory, Mode=TwoWay}" Margin="5" />-->
                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels:EditPartnerViewModel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>

                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Partner Id:" TextAlignment="Right" Margin="5"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=Item.Id, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Parnter name:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="1" Text="{Binding Path=Item.Name, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Parnter code:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="2" Text="{Binding Path=Item.Code, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="3" Text="Customer:" TextAlignment="Right" Margin="5"/>
                        <CheckBox  Grid.Column="1" Grid.Row="3" IsChecked="{Binding Path=Item.Customer, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="4" Text="Dealer:" TextAlignment="Right" Margin="5"/>
                        <CheckBox  Grid.Column="1" Grid.Row="4" IsChecked="{Binding Path=Item.Dealer, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="5" Text="Address:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="5" Text="{Binding Path=Item.Address, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="6" Text="Phone number:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="6" Text="{Binding Path=Item.Phone, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="7" Text="E-mail address:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="7" Text="{Binding Path=Item.Email, Mode=TwoWay}" Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="8" Text="Bank account number:" TextAlignment="Right" Margin="5"/>
                        <TextBox  Grid.Column="1" Grid.Row="8" Text="{Binding Path=Item.AccountNumber, Mode=TwoWay}" Margin="5" />

                    </Grid>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewModels:EditTransactionViewModel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>

                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Grid.Row="0" Text="Date:" TextAlignment="Right" Margin="5"/>
                        <DatePicker Grid.Column="1" Grid.Row="0" SelectedDate="{Binding TransactionDate}"  Margin="5" />

                        <TextBlock Grid.Column="0" Grid.Row="1" Text="Partner:" TextAlignment="Right" Margin="5"/>
                        <ListView Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Partners}" SelectedItem="{Binding SelectedPartner,Mode=TwoWay}" Margin="5"  Height="150">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" />
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" />
                                    <GridViewColumn Header="Code" DisplayMemberBinding="{Binding Code}" />
                                    <GridViewColumn Header="Address" DisplayMemberBinding="{Binding Address}" />
                                    <GridViewColumn Header="Phone number" DisplayMemberBinding="{Binding Phone}" />
                                    <GridViewColumn Header="E-mail address" DisplayMemberBinding="{Binding Email}" />
                                    <GridViewColumn Header="Bank account number" DisplayMemberBinding="{Binding AccountNumber}" />
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <TextBlock Grid.Column="0" Grid.Row="2" Text="Product:" TextAlignment="Right" Margin="5"/>
                        <Grid Grid.Column="1" Grid.Row="2" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <ListView Grid.Column="0" ItemsSource="{Binding ProductCategories}" SelectedItem="{Binding SelectedProductCategory,Mode=TwoWay}" Margin="5"  Height="150">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <ListView Grid.Column="1" ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct,Mode=TwoWay}" Margin="5"  Height="150">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Product name" DisplayMemberBinding="{Binding Name}" />
                                            <GridViewColumn Header="Product code" DisplayMemberBinding="{Binding Code}" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                            <Grid Grid.Row="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition  />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Quantity:" TextAlignment="Right" Margin="5"/>
                                <TextBox  Grid.Column="1" Grid.Row="0" Text="{Binding ProductQuantity, Mode=TwoWay}" Margin="5" />

                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Unit price:" TextAlignment="Right" Margin="5"/>
                                <TextBox  Grid.Column="1" Grid.Row="1" Text="{Binding ProductPrice, Mode=TwoWay,StringFormat={}{0:C} }" Margin="5" />
                            </Grid>
                            <Grid Grid.Row="2" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition  />
                                    <ColumnDefinition  />
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0" Content="Add product" Margin="5" Command="{Binding AddProductCommand}" />
                                <Button Grid.Column="1" Content="Remove product" Margin="5" Command="{Binding RemoveProductCommand}" />
                            </Grid>
                        </Grid>
                        <TextBlock Grid.Column="0" Grid.Row="3" Text="Transaction:" TextAlignment="Right" Margin="5"/>
                        <ListView Grid.Column="1" Grid.Row="3" ItemsSource="{Binding TransactionBody}" SelectedItem="{Binding SelectedBody,Mode=TwoWay}" Margin="5"  Height="150">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Product name" DisplayMemberBinding="{Binding Path=Product.Name}" />
                                    <GridViewColumn Header="Product code" DisplayMemberBinding="{Binding Path=Product.Code}" />
                                    <GridViewColumn Header="Unit price" DisplayMemberBinding="{Binding Path=Body.Price,Mode=TwoWay,StringFormat={}{0:C} }" />
                                    <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Path=Body.Quantity,Mode=TwoWay}" />
                                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Path=SumPrice,StringFormat={}{0:C}}" />
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding TotalPrice, StringFormat=Total price: {0:C}}" TextAlignment="Left" FontSize="30" Margin="5" />
                    </Grid>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>

        <Grid Grid.Row="1" Width="Auto" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="{Binding OkButtonText}" Margin="10" FontSize="24" Command="{Binding SaveCommand}" CommandParameter="{Binding ElementName=EditItemWindow}"/>
            <Button Grid.Column="3" Content="Cancel" Margin="10" FontSize="24" Command="{Binding CloseCommand}" CommandParameter="{Binding ElementName=EditItemWindow}" />
        </Grid>
    </Grid>
</Window>
